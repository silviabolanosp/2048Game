<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffff0"
    android:orientation="vertical"
    android:id="@+id/main"
    tools:context=".MainActivity"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="168dp"
        android:fontFamily="@font/baloo_thambi"
        android:gravity="center"
        android:text="Menú"
        android:textColor="#35B4F9"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/user"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/baloo_thambi"
        android:gravity="center"
        android:hint=" Nombre de partida"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textColor="#4FDB6F"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/timer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStart" />

    <Switch
        android:id="@+id/timer"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="28dp"
        android:checked="true"
        android:fontFamily="@font/baloo_thambi"
        android:gravity="left"
        android:text="Temporizador"
        android:textColor="#4FDB6F"
        android:textOff="Cronómetro"
        android:textOn="Temporizador"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user" />

    <NumberPicker
        android:id="@+id/np"
        android:layout_width="100dp"
        android:layout_height="91dp"
        android:layout_marginEnd="54dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user" />

    <Switch
        android:id="@+id/bombs"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="162dp"
        android:checked="true"
        android:fontFamily="@font/baloo_thambi"
        android:gravity="left"
        android:text="Bombas"
        android:textAlignment="textStart"
        android:textColor="#4FDB6F"
        android:textOff="Off"
        android:textOn="On"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timer" />

    <Switch
        android:id="@+id/gridSize"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="162dp"
        android:checked="true"
        android:fontFamily="@font/baloo_thambi"
        android:gravity="left"
        android:text="Tamaño"
        android:textAlignment="viewStart"
        android:textColor="#4FDB6F"
        android:textOff="6x6"
        android:textOn="4x4"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bombs" />

    <Button
        android:id="@+id/btnStart"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="303dp"
        android:layout_height="50dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="54dp"
        android:background="@drawable/botton_round"
        android:fontFamily="@font/baloo_thambi"
        android:text="Iniciar partida"
        android:textColor="@color/grid"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnScores"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="303dp"
        android:layout_height="43dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/botton_round"
        android:fontFamily="@font/baloo_thambi"
        android:text="Historial"
        android:textColor="#FBFEF9"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnTutorial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnTutorial"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="303dp"
        android:layout_height="43dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="54dp"
        android:background="@drawable/botton_round"
        android:fontFamily="@font/baloo_thambi"
        android:text="Tutorial"
        android:textColor="#FBFEF9"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/baloo_thambi"
        android:textColor="#4FDB6F"
        android:text="Usuario"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/music"
        android:layout_width="90dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:checked="true"
        android:textColor="#613F75"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Switch
        android:id="@+id/colorSwitch"
        android:layout_width="213dp"
        android:layout_height="50dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="134dp"
        android:fontFamily="@font/baloo_thambi"
        android:text="Modo oscuro"
        android:textAlignment="viewStart"
        android:textColor="#4FDB6F"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridSize" />

    <ImageView
        android:id="@+id/music_icon"
        android:layout_width="33dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/music_note"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/music_note" />


</androidx.constraintlayout.widget.ConstraintLayout>