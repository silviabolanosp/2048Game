        android:id="@+id/np"
        android:layout_width="100dp"
        android:layout_height="91dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="44dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
